#!/usr/bin/env bash

set -eo pipefail

repo=docker/compose

cmd="curl --silent --location"
releases_path="https://api.github.com/repos/$repo/releases"

if [ -n "$GITHUB_API_TOKEN" ]; then
  cmd="$cmd --header 'Authorization: token $GITHUB_API_TOKEN'"
fi

sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

versions=$(eval "$cmd $releases_path" | grep -oE "tag_name\":\s?\".*\"," | sed 's/tag_name\": *\"//;s/\",//' | sed 's/^[v]//' | sort_versions | xargs)

>&2 echo
>&2 echo NOTE:
>&2 echo
>&2 echo Version 2.x or greater are NOT SUPPORTED by this plugin.
>&2 echo Please see https://github.com/docker/compose#where-to-get-docker-compose for more info.
>&2 echo

echo "$versions"
